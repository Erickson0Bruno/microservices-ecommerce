    <div class="v-spacer">
      <script>
        var url = location.href
        var activated = false
        $('.link')
          .children('li')
          .each(function(index, val) {
            var text = $(val).attr('id')
              ? $(val)
                  .attr('id')
                  .toLowerCase()
              : null
            if (url.indexOf(text) > 0) {
              $(val).addClass('active')
              activated = true
            }
          })
        if (!activated) $('#home').addClass('active')
      </script>